@model Pokedex.Models.EggGroupEvaluatorViewModel;
@{
    List<Pokedex.DataAccess.Models.PokemonEggGroupDetail> eggGroups = Model.AllPokemonWithEggGroups;
}

<div class="shadowed dayCarePokemon">
    @if(Model.AllAltForms.Any(x => x.Id == @Model.SearchedPokemon.Id))
    {
        <a href="@this.Url.Action("PokemonWithId", "Home", new { pokemonName = @Model.SearchedPokemon.Name.Replace(": ", "_").Replace(' ', '_').ToLower(), pokemonId = @Model.SearchedPokemon.Id } )">
            <img class="pokemonlistPicture eggGroupImage" src="@string.Concat(Model.AppConfig.WebUrl, Model.AppConfig.PokemonImageUrl, Model.SearchedPokemon.Id, ".png")" title="@Model.SearchedPokemon.Name">
        </a>
    }
    else
    {
        <a href="@this.Url.Action("Pokemon", "Home", new { name = @Model.SearchedPokemon.Name.Replace(": ", "_").Replace(' ', '_').ToLower() } )">
            <img class="pokemonlistPicture eggGroupImage" src="@string.Concat(Model.AppConfig.WebUrl, Model.AppConfig.PokemonImageUrl, Model.SearchedPokemon.Id, ".png")" title="@Model.SearchedPokemon.Name">
        </a>
    }
    <div class="eggGroups">
        @foreach (var e in Model.PokemonEggGroups)
        {
            <div class="egg-group-icon egg-group-@(e.Name.ToLower().Replace(' ', '-'))">@e.Name</div>
        }
    </div>
</div>

<h2>Pok√©mon @Model.SearchedPokemon.Name Can Breed With</h2>
<div class="grid-container pokemonList">
    @for(var i = 0; i < eggGroups.Count(); i++)
    {
        <div class="shadowed @eggGroups[i].Pokemon.Name">
            @if(Model.AllAltForms.Any(x => x.Id == @eggGroups[i].Pokemon.Id))
            {
                <a href="@this.Url.Action("PokemonWithId", "Home", new { pokemonName = @Model.AllOriginalPokemon[i].Name.Replace(": ", "_").Replace(' ', '_').ToLower(), pokemonId = @Model.AllOriginalPokemon[i].Id } )">
                    <img class="pokemonListPicture" title="@eggGroups[i].Pokemon.Name" src="@string.Concat(Model.AppConfig.WebUrl, Model.AppConfig.PokemonImageUrl, eggGroups[i].PokemonId, ".png")">
                </a>
                <div>
                    <a class="pokemonName" href="@this.Url.Action("PokemonWithId", "Home", new { pokemonName = @Model.AllOriginalPokemon[i].Name.Replace(": ", "_").Replace(' ', '_').ToLower(), pokemonId = @Model.AllOriginalPokemon[i].Id } )">@('#')@Model.AllPokemon[i].PokedexNumber.ToString().PadLeft(3, '0') @Model.AllPokemon[i].Name</a>
                </div>
            }
            else
            {
                <a href="@this.Url.Action("Pokemon", "Home", new { name = @Model.AllOriginalPokemon[i].Name.Replace(": ", "_").Replace(' ', '_').ToLower() } )">
                    <img class="pokemonListPicture" title="@eggGroups[i].Pokemon.Name" src="@string.Concat(Model.AppConfig.WebUrl, Model.AppConfig.PokemonImageUrl, eggGroups[i].PokemonId, ".png")">
                </a>
                <div>
                    <a class="pokemonName" href="@this.Url.Action("Pokemon", "Home", new { name = @Model.AllOriginalPokemon[i].Name.Replace(": ", "_").Replace(' ', '_').ToLower() } )">@('#')@Model.AllPokemon[i].PokedexNumber.ToString().PadLeft(3, '0') @Model.AllPokemon[i].Name</a>
                </div>
            }
        </div>
    }
</div>