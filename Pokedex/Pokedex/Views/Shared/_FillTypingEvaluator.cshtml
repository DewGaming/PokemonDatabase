@model Pokedex.Models.TypingEvaluatorViewModel;
@using Pokedex.DataAccess.Models;
@{
    List<PokemonTypeDetail> typing = Model.AllPokemonWithTypes;
}

@for(var i = 0; i < typing.Count(); i++)
{
    <div class="shadowed @typing[i].Pokemon.Name">
        <a href="@this.Url.Action("PokemonWithId", "Home", new { pokemonName = typing[i].Pokemon.Name.Replace(": ", "_").Replace(' ', '_').ToLower(), pokemonId = Model.AllPokemon[i].Id })">
            <img class="pokemonListPicture" title="@Model.AllPokemon[i].Name" src=@string.Concat(Model.AppConfig.WebUrl, Model.AppConfig.PokemonImageUrl, typing[i].PokemonId, ".png")>
        </a>
        <div>
            <a class="pokemonName" href="@this.Url.Action("PokemonWithId", "Home", new { pokemonName = typing[i].Pokemon.Name.Replace(": ", "_").Replace(' ', '_').ToLower(), pokemonId = Model.AllPokemon[i].Id })">@('#')@Model.AllPokemon[i].PokedexNumber.ToString().PadLeft(3, '0') @Model.AllPokemon[i].Name</a>
        </div>
    </div>
}